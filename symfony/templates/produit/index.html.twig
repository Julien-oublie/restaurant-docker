{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            {% if restaurent.id == produit.restaurent.id %}
            
                <tr>
                    <td>{{ produit.id }}</td>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.prix }}</td>
                    <td>{{ produit.description }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a class="btn btn-info" href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                            <a class="btn btn-primary" href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                        </td>
                    {% else %}
                        <td>
                            <a class="btn btn-info" href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                            
                        </td>
                    {% endif %}
                </tr>
            {% endif %}
        {% else %}
            <p> il y'a pas de restaurant</p>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
