{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div>
    <h1>Votre Panier</h1>

    <table>
        <thead>
            <tr>
                <th> produit </th>
                <th> Prix </th>
                <th> quantite </th>
                <th> Restaurant </th>
                <th>Total</th>
                <th> action</th>
            </tr>
        </thead>
        <tbody>
            {% for element in dataPanier %}
            <tr>
                <td> {{element.produit.nom}} </td>
                <td> {{element.produit.prix}}  €  </td>
                <td> {{element.quantite}}  </td>
                <td>  </td>
                <td> {{element.produit.prix * element.quantite}}   € </td>

                <td>
                    <a href="{{path("add",{id:element.produit.id})}}">ajouter</a>
                    <a href="{{path("remove",{id:element.produit.id})}}">enlever une quantite</a>
                    <a href="{{path("delete",{id:element.produit.id})}}">supp ligne</a>
                </td>
            </tr>  
            {% else %}    
                <tr>
                    <td> Votre panier est vide </td>
                </tr>                    
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td>Total</td>
                <td> {{ total }} € </td>
            </tr>
        </tfoot>
    </table>
    <a href="{{path("commande_new")}}">Valider la commande</a>
</div>
{% endblock %}
